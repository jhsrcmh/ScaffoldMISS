<!--上传文件轻松解决，用于替代全局变量-->
<%= form_for(@backupinf, :html=>{:enctype=>'multipart/form-data'}) do |f| %>
  <% if @backupinf.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@backupinf.errors.count, "error") %> prohibited this backupinf from being saved:</h2>

      <ul>
      <% @backupinf.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
  	<%= f.label :back_information%>
  	<%= file_field_tag(:img_file, :size=>'33')%>
  </div>

  <div class="field">
  	<%= f.label :projectname %>
  	<%= collection_select :project, :projname, Project.all, :id, :projname%>
  </div>
  <div class="field">
  	<%= :username%>
  	<%= collection_select :user, :username, User.all, :id, :username%>
  </div>
  <div class="field">
  	<%= f.label :backuptype %>
  	<%= collection_select :backup_type, :backuptypename, BackupType.all, :id, :backuptypename%>
  </div>
  <div class="field">
    <%= f.label :remarkinf %><br />
    <%= f.text_area :remarkinf %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
